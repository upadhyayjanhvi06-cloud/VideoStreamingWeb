<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini VideoHub ðŸŽ¥</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #141414;
      --card: #1f1f1f;
      --primary: #e50914;
      --text: #fff;
      --muted: #b3b3b3;
    }

    * { margin:0; padding:0; box-sizing:border-box; font-family:'Poppins', sans-serif; }

    body { 
      background: var(--bg); 
      color: var(--text); 
      min-height: 100vh;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 50px;
      background: #000;
    }

    header h1 { color: var(--primary); }
    header nav a { 
      margin-left: 20px; 
      color: var(--text); 
      text-decoration: none; 
      font-weight: 500;
      transition: color 0.3s;
    }
    header nav a:hover { color: var(--primary); }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      padding: 40px 50px;
    }

    .video-card {
      background: var(--card);
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
      display: flex;
      flex-direction: column;
    }

    .video-card:hover {
      transform: scale(1.03);
      box-shadow: 0 10px 30px rgba(0,0,0,0.7);
    }

    .video-thumb {
      background: #000;
      height: 150px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--muted);
      font-size: 20px;
    }

    .video-content {
      padding: 15px;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .video-content h3 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .video-content p { 
      font-size: 14px; 
      margin-bottom: 12px; 
      color: var(--muted);
    }

    .video-content a {
      text-decoration: none;
      background: var(--primary);
      color: #fff;
      text-align: center;
      padding: 8px 0;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .video-content a:hover { background: #f6121d; }

    @media(max-width: 600px) {
      header { flex-direction: column; gap:10px; }
      .container { padding: 20px; gap: 20px; }
    }
  </style>
</head>
<body>

  <header>
    <h1>Mini VideoHub ðŸŽ¥</h1>
    <nav>
      <a href="/upload">Upload</a>
      <a href="/login">Login</a>
    </nav>
  </header>

  <div class="container">
    <% videos.forEach(video => { %>
      <div class="video-card">
        <div class="video-thumb">
          ðŸŽ¬
        </div>
        <div class="video-content">
          <h3><%= video.title %></h3>
          <p>Likes: <%= video.likes %></p>
          <a href="/watch/<%= video.id %>">Watch</a>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
